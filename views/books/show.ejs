<%- include('../partials/header') %>

<section id="show-page">
    <div>Title: </div>
    <div><%= book.title %></div>
    <div>Author: </div>
    <div><%= book.author %></div>    
    <div>Year Published: </div>
    <div><%= book.datePublished %></div>
    <div>Length: </div>
    <div><%= book.pageCount %></div>
    <div>Priority: </div>
    <div><%= book.priority %></div>
</section>

<% if (book.comments) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <% book.comments.forEach(function(c) { %>
          <tr>
            <!-- .toLocaleDateString() provides a more friendly date format -->
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>

<h2>Comments</h2>
<form id="add-comment-form" method="POST"
  action="/books/<%= book._id %>/comments">
  <label>Comment:</label>
  <textarea name="content"></textarea><br>
  <input type="submit" value="Add Comment">
</form>

<%- include('../partials/footer') %>