<%- include('../partials/header') %>

<section id="show-page">
    <div>Title: </div>
    <div><%= book.title %></div>
    <div>Author: </div>
    <div><%= book.author %></div>    
    <div>Year Published: </div>
    <div><%= book.datePublished %></div>
    <div>Length: </div>
    <div><%= book.pageCount %></div>
    <div>Priority: </div>
    <div><%= book.priority %></div>
    <form action="/books/<%= book.id %>/edit">
        <button class="button is-dark">Edit Book Details</button>
    </form>
</section>

<% if (book.comments.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <% book.comments.forEach(function(c) { %>
          <tr>
            <!-- .toLocaleDateString() provides a more friendly date format -->
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
            <td>
                  <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
                    <button type="submit"><span class="material-symbols-outlined">
                        delete
                        </span></button>
                  </form>
                  <td>
                    <form action="/comments/<%= c._id %>/edit" method="GET">
                      <button type="submit"><span class="material-symbols-outlined">
                        edit
                        </span></button>
                    </form>
                </td>
              </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>


<form id="add-comment-form" method="POST"
  action="/books/<%= book._id %>/comments">
<div class="field">
  <label class="label is-medium">Add Comment:</label>
  <div class="control">
    <textarea name="content"></textarea>
  </div>
</div>

<div class="field">
  <div class="control">
    <button class="button is-dark">Add Comment</button>
  </div>
</div>


</form>

<%- include('../partials/footer') %>