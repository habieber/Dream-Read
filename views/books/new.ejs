<%- include('../partials/header') %>

<h2 class="subtitle">Add a book to your shelf</h2>

<form class="box" action="/books" method="POST">
    <div class="field">
        <label class="label is-medium">Title</label>
        <div class="control">
            <input type="text" name="title">
        </div>
    </div>

    <div class="field">
        <label class="label is-medium">Author</label>
        <div class="control">
            <input type="text" name="author">
        </div>
    </div>

    <div class="field">
        <label class="label is-medium">Year Published</label>
        <div class="control">
            <input type="text" name="datePublished">
        </div>
    </div>

    <div class="field">
        <label class="label is-medium">Pages</label>
        <div class="control">
            <input type="number" name="pageCount">
        </div>
    </div>

    <div id="priority" class="field has-addons">
        <label class="label is-medium">Priority</label>
        <div class="control is-expanded">
            <select class="select is-small" name="priority">
                <option value="low" selected>Low</option>
                <option value="med">Med</option>
                <option value="high">High</option>
            </select>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
        <button class="button is-dark">Add Book</button>
        </div>
    </div>
</form>

<h2>OR</h2><br>

<form class="box" action="/books/list" method="GET">
    <div class="has-text-centered">
        <label class="title">Browse Books</label>
    </div>
    <div class="field has-addons">
          <div class="control">
            <input class="input is-large" type="text" name="volume"
              placeholder="Enter a Title">
          </div>
          <div class="control">
            <button class="button is-large is-dark" type="submit">Go!</button>
          </div>
    </div>
</form>

<p><%= errorMsg %></p>

<%- include('../partials/footer') %>